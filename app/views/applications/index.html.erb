<p id="notice"><%= notice %></p>

<h1>Applications</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Fname</th>
      <th>Lname</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Street</th>
      <th>Street2</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Dob</th>
      <th>Gender</th>
      <th>Military status</th>
      <th>Education</th>
      <th>Experience</th>
      <th>Employment</th>
      <th>Salary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @applications.each do |application| %>
      <tr>
        <td><%= application.course %></td>
        <td><%= application.fname %></td>
        <td><%= application.lname %></td>
        <td><%= application.email %></td>
        <td><%= application.phone %></td>
        <td><%= application.street %></td>
        <td><%= application.street2 %></td>
        <td><%= application.city %></td>
        <td><%= application.state %></td>
        <td><%= application.zip %></td>
        <td><%= application.dob %></td>
        <td><%= application.gender %></td>
        <td><%= application.military_status %></td>
        <td><%= application.education %></td>
        <td><%= application.experience %></td>
        <td><%= application.employment %></td>
        <td><%= application.salary %></td>
        <td><%= link_to 'Show', application %></td>
        <td><%= link_to 'Edit', edit_application_path(application) %></td>
        <td><%= link_to 'Destroy', application, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

